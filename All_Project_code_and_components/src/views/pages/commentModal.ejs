<main>
    
    <div class = "container">
        <h5 style="color: white; font-family: 'Times New Roman', Times, serif;">Write a Comment!</h5>

            <form action = "/comment" method = "POST">

            <p style="font-family: 'Times New Roman', Times, serif; color: white;">This comment will be displayed on the page for all accounts to see</p>

            <!-- Username  input-->
            <div class="form-group">
                <label for="email" style="color: white;">Email</label>
                <input type="email" class="form-control" id="email" name="email" required>
            </div>

            <div class="form-group">
                <label for="comment" style="color: white;">Comment</label>
                <input type="text" class="form-control" id="comment" name="comment" required>
            </div>

            <button type="submit" class="btn btn-primary btn-block mb-4">Submit</button>

            </form>
            

        <div class="col"><%- include ('../partials/message') %></div>
    </div>
</main>