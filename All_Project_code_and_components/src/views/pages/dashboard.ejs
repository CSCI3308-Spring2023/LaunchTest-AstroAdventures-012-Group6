
<!-- Include Header here -->

<%- include ('../partials/header') %> 
<!-- Include Navbar menu here -->
<%- include ('../partials/menu') %>

<main>
    
    <h1><centre>Dashboard</centre></h1>
    <div>

        <h3 style ="color: #11416c; text-decoration: underline;">Solar flare data recorded by NASA</h3>
        <a style="font-family: Verdana, Geneva, Tahoma, sans-serif;"href="<%= solarFlares.data[0].link %>"> Recent solar flare full data - NASA Website</a>
        <!-- Table for solar flare info -->
        <table style ="font-family: Verdana, Geneva, Tahoma, sans-serif;border: 5px solid #11416c; border-collapse:collapse">
            <tr>
                <th>Flare ID</th>
                <td> <%=solarFlares.data[0].flrID %> </td>
            </tr>
            <tr>
                <th>Instruments</th>
                <td> <%=solarFlares.data[0].instruments[0].displayName %> </td>
            </tr>
            <tr>
                <th>Begin time</th>
                <td> <%=solarFlares.data[0].beginTime %> </td>
            </tr>
            <tr>
                <th>Peak time</th>
                <td> <%= solarFlares.data[0].peakTime %> </td>
            </tr>
            <tr>
                <th> End time </th>
                <td><%= solarFlares.data[0].endTime %></td>
            </tr>
            <tr>
                <th> Class type </th>
                <td><%= solarFlares.data[0].classType%></td>
            </tr>
            <tr>
                <th> Source location </th>
                <td><%= solarFlares.data[0].sourceLocation %></td>
            </tr>
        </table>
        
    </div>
    
    <div class ="carousel slide" data-ride="carousel" id="carousel">
        <ol class="carousel-indicators">
            <li data-target="#carouselIndicators" data-slide-to="0" class="active"></li>
            <li data-target="#carouselIndicators" data-slide-to="1"></li>
            <li data-target="#carouselIndicators" data-slide-to="2"></li>
        </ol>
        <div class="carousel-inner">
            <!-- API 1 here (ISS)-->

            <div class="carousel-item active">
                <img class="d-block w-100" src="..." alt="International Space Station">
                <div class="carousel-caption d-none d-md-block">
                    <h5>ISS Location</h5>
                    <p>...</p>
                </div>
            </div>
            <!-- API 2 here (Astronauts)-->
            <div class="carousel-item">
                <img class="d-block w-100" src="..." alt="Astronauts in Space">
                <div class="carousel-caption d-none d-md-block">
                    <h5>Astronauts</h5>
                    <p>...</p>
                </div>
            </div>
            <!-- API 3 here (Space storms)-->
            <div class="carousel-item">
                <img class="d-block w-100" src="..." alt="Space Storms">
                <div class="carousel-caption d-none d-md-block">

                </div>
            </div>
        </div>
        <a class="carousel-control-prev" href="#carouselIndicators" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselIndicators" role="button" data-slide="next">
            <span class="carousel-control-next-icon" arie-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
</main>





